<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gesturepwd_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/please_access_pattern"
        android:textColor="@color/gray_text_dark"
        android:textSize="@dimen/font_common_1" />
    <!-- title下方线条 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/main_out_down_line_color" />

    <TextView
        android:id="@+id/unlock_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:shadowRadius="1.0"
        android:text="用户名"
        android:textColor="@color/white"
        android:textSize="@dimen/font_common_2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/translate"
        android:gravity="center"
        android:orientation="vertical" >

        <!--
        <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="@dimen/gesture_grid_width"
        android:layout_height="@dimen/gesture_grid_width"
        android:layout_gravity="center_horizontal"
        android:background="@color/translate"
        android:orientation="vertical"
        android:padding="@dimen/gesture_grid_padding" > 
        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gesture_grid_item_width"
            android:visibility="gone" >

            <View
                android:id="@+id/gesturepwd_setting_preview_0"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />

            <View
                android:id="@+id/gesturepwd_setting_preview_1"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:layout_marginLeft="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />

            <View
                android:id="@+id/gesturepwd_setting_preview_2"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:layout_marginLeft="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gesture_grid_item_width"
            android:layout_marginTop="@dimen/gesture_grid_item_width"
            android:visibility="gone" >

            <View
                android:id="@+id/gesturepwd_setting_preview_3"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />

            <View
                android:id="@+id/gesturepwd_setting_preview_4"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:layout_marginLeft="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />

            <View
                android:id="@+id/gesturepwd_setting_preview_5"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:layout_marginLeft="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gesture_grid_item_width"
            android:layout_marginTop="@dimen/gesture_grid_item_width"
            android:visibility="gone" >

            <View
                android:id="@+id/gesturepwd_setting_preview_6"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />

            <View
                android:id="@+id/gesturepwd_setting_preview_7"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:layout_marginLeft="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />

            <View
                android:id="@+id/gesturepwd_setting_preview_8"
                android:layout_width="@dimen/gesture_grid_item_width"
                android:layout_height="@dimen/gesture_grid_item_width"
                android:layout_marginLeft="@dimen/gesture_grid_item_width"
                android:background="@drawable/gesture_create_grid_unselected" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gesture_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/gesturepwd_unlock_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:shadowRadius="1.0"
        android:text="请绘制手势密码"
        android:textColor="@color/main_blue_color"
        android:textSize="@dimen/font_common_2" />

    <TextView
        android:id="@+id/gesturepwd_unlock_failtip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="0.0dip"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="5次失败后，需要重新登录。"
        android:textColor="@color/color_text_gr"
        android:textSize="@dimen/font_common_2"
        android:visibility="gone" />

    <com.jinr.core.security.lockpanttern.view.LockPatternView
        android:id="@+id/gesturepwd_unlock_lockview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/gesturepwd_unlock_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/gesture_arrow_right"
        android:gravity="center_horizontal"
        android:text="@string/forget_pattern"
        android:textColor="@color/main_blue_color"
        android:textSize="@dimen/font_common_2" />

</LinearLayout>