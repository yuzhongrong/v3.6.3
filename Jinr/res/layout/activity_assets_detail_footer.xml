<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_vouch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_vouchname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/logout_guide"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_vouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_txt_bg"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="1dp"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_claims"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_claimsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/logout_guide"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_claims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_txt_bg"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="1dp"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <ImageView
            android:id="@+id/image_card"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_turnovername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/logout_guide"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_turnover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_txt_bg"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="1dp"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>