<?xml version="1.0" encoding="utf-8"?>
<!-- 确认新交易密码 第二次 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >
	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
           <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
			    <TextView
			        android:id="@+id/trap_password_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:layout_marginTop="10dp"
			        android:padding="10dp"
			        android:text="请再次确认交易密码"
			        android:textColor="@color/my_bank_card"
			        android:textSize="16sp" />
			
			    <com.jinr.core.utils.PasswordInputView2
			        android:id="@+id/txt_pwd"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginTop="0dp"
			        android:cursorVisible="false"
			        android:inputType="number"
			        android:maxLength="6"
			        android:paddingBottom="10dp"
			        android:paddingTop="10dp" />			
			    <Button
			        android:id="@+id/btn_sure"
			        style="@style/btn5_style"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="30dp"
			        android:background="@drawable/btn_blue_light_bg"
			        android:text="确认"
			        android:textColor="@color/white"
			        android:visibility="gone" />
	 </LinearLayout>
	 <Button
         android:id="@+id/btn_notice"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="#ee5f50"
         android:gravity="center_vertical|center"
         android:singleLine="true"
         android:alpha="0.95"
         android:textColor="@color/left_menu_txt_normal"
         android:textSize="15sp"
         android:visibility="gone" />
   </FrameLayout>
</LinearLayout>