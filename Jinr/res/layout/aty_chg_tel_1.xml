<?xml version="1.0" encoding="utf-8"?>
<!-- 第一步，确认登录密码 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frgchg_tel_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/chg_tel_pwd_bg_rect"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="登录密码"
            android:textColor="@color/blue_color"
            android:textSize="15sp" />

        <com.jinr.core.utils.MyEditText
            android:id="@+id/txt_pwd"
            style="@style/captcha_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_ae"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/btn_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/frgchg_tel_eye"
            android:padding="10dp"
            android:src="@drawable/psw_disapper" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null" />

        <Button
            android:id="@+id/btn_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:text="@string/forgot_passwd"
            android:padding="10dp"
            android:textColor="@color/blue_color"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/btn5_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_blue_light_bg"
        android:text="@string/next"
        android:textColor="@color/white" />

</LinearLayout>