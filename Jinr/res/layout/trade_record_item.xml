<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/date_title"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/gray"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/trade_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:textColor="@color/redbag_black"
            android:textSize="14dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/trade_item"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_in_or_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/img_in_or_out" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="17dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/first_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/trade_item_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text_dark"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/trade_item_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/trade_item_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_txt_bg"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/trade_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/gray_txt_bg"
                        android:textSize="13dp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:background="#E5E5E5" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#E5E5E5"
        android:visibility="gone" />

</LinearLayout>