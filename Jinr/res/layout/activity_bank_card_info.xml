<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_about_bg"
    android:orientation="vertical" >

    <!-- title布局 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <View style="@style/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                style="@style/line"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_menu_height"
                android:background="@color/base_menu_bg" >

                <TextView
                    android:id="@+id/bind_bank_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/card_type"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/gray_1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_out_back_color"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/all_left_offset"
                android:paddingTop="8dp"
                android:text="@string/bank_info_fill_tip"
                android:textColor="@color/main_out_down_text_color"
                android:textSize="13sp" />

            <View style="@style/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_menu_height"
                android:background="@color/base_menu_bg" >

                <TextView
                    android:id="@+id/bind_bank_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/name" 
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_user_name"
                    style="@style/edit_style_new"
                    android:layout_marginLeft="100dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_c"
                    android:maxLength="25" />
            </RelativeLayout>

            <View style="@style/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_menu_height"
                android:background="@color/base_menu_bg" >

                <TextView
                    android:id="@+id/bind_bank_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/user_number"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_user_number"
                    style="@style/edit_style_new"
                    android:layout_marginLeft="100dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_d" />
            </RelativeLayout>
            <!-- 线条 -->

            <View style="@style/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_out_back_color"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/all_left_offset"
                android:paddingTop="8dp"
                android:text="@string/bank_info_fill_real_tip"
                android:textColor="@color/orange_text"
                android:textSize="13sp" />

            <View style="@style/line" />

            <RelativeLayout
                android:id="@+id/bind_bank_rl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_menu_height"
                android:background="@color/base_menu_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/all_left_offset"
                    android:layout_marginTop="13dp"
                    android:text="@string/mobile_no"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_info"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_left_offset"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_phone_info" />

                <EditText
                    android:id="@+id/et_user_tel"
                    style="@style/edit_style_new"
                    android:layout_marginLeft="100dp"
                    android:layout_toLeftOf="@id/iv_info"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_e"
                    android:inputType="number" />
            </RelativeLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_agree_or_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/click_agred" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意" />

                <TextView
                    android:id="@+id/register_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/service_agreement"
                    android:textColor="@color/blue_notice_bg"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/bind_bank_submit"
                style="@style/btn5_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gray_bg"
                android:text="@string/next"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>