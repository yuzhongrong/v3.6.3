<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <View style="@style/line" />


    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:orientation="horizontal"
      android:background="@drawable/layout_bg"
      android:gravity="center_vertical">

        <TextView
            android:id="@+id/forgot_passwd_tv1"
            style="@style/text5_style"
            android:layout_margin="15dp"
            android:text="@string/tel_no" />

        <com.jinr.core.utils.MyEditText
            android:id="@+id/forgot_passwd_tel"
            style="@style/edittext5_style"
            android:inputType="number"
            android:maxLength="11" 
            android:hint="@string/hint_b" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_commit_fp"
        style="@style/btn5_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue_light_bg"
        android:textColor="@color/white"
        android:text="@string/next" />

</LinearLayout>