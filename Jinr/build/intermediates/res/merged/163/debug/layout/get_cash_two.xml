<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_offset"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <View style="@style/line" />

    <View
        style="@style/line"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_menu_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/forgot_passwd_tv3"
            style="@style/text5_style"
            android:layout_margin="15dp"
            android:text="@string/deal_passwd" />

        <com.jinr.core.utils.MyEditText
            android:id="@+id/get_cash_sec_et1"
            style="@style/edittext5_style"
            android:layout_marginLeft="-5dp"
            android:hint="@string/hint_m"
            android:inputType="textPassword" />
    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_menu_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/forgot_passwd_tv2"
            style="@style/text5_style"
            android:layout_margin="15dp"
            android:paddingRight="16dp"
            android:text="@string/modify_code" />

        <EditText
            android:id="@+id/get_cash_sec_code"
            style="@style/edittext5_style"
            android:layout_width="0dp"
            android:layout_marginLeft="-5dp"
            android:layout_weight="1"
            android:hint="@string/hint_code_6"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="14sp" />

        <Button
            android:id="@+id/get_cash_sec_send_code"
            style="@style/wrap"
            android:layout_marginRight="10dp"
            android:background="@drawable/mobile_code"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="@string/send_modify_code"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/line" />

    <Button
        android:id="@+id/get_cash_sec_submit"
        style="@style/btn5_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/turn_out_sure" />

</LinearLayout>