<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- title布局 -->

    <include layout="@layout/title" />

    <!-- title下方块布局 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_below_back" />

    <!-- 线条 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/line" />

    <TextView
        android:id="@+id/get_cash_finish_tv1"
        style="@style/wrap"
        android:padding="35dp"
        android:text="@string/get_cash_tips"
        android:textColor="@color/main_out_down_text_color"
        android:textSize="13sp" />

    <!-- 线条 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_offset" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/get_cash_finish_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/but_about_white"
                android:padding="10dp"
                android:text="@string/look_deal_record"
                android:textColor="@color/index_bg"
                android:textSize="20sp" />

            <Button
                android:id="@+id/get_cash_finish_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/but_about_white"
                android:padding="10dp"
                android:text="@string/back_to_main"
                android:textColor="@color/index_bg"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>