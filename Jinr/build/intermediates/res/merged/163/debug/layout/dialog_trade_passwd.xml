<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_back"
    android:gravity="top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="请输入支付密码"
        android:textColor="@color/assets_text_a"
        android:textSize="15sp" />
    
    <View
        style="@style/line_dialog"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/gray_text_dark"
        android:textSize="22sp" />
    
    <com.jinr.core.utils.PasswordInputView2
        android:id="@+id/eta_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="15dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="20dp" >
        
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/btn_blue_light_bg"
            android:text="@string/dialog_call_bt_cancel"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
        <Button
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_blue_bg"
            android:text="@string/dialog_call_bt_ok"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
    </LinearLayout>

</LinearLayout>