<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="优选理财"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_1" />

            <ImageView
                android:id="@+id/close_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/close_more_tab_img" />
        </RelativeLayout>

        <View style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_product_tab"
                android:gravity="center"
                android:padding="20dp"
                android:text="活期"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_4" />

            <View
                style="@style/line"
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/strong_box_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_box_tab"
                android:gravity="center"
                android:padding="20dp"
                android:text="保险箱"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_4" />

            <View
                style="@style/line"
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/regular_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_regular_tab"
                android:gravity="center"
                android:padding="20dp"
                android:text="定期"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_4" />
        </LinearLayout>

        <View style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transfer_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_transfer_tab"
                android:gravity="center"
                android:padding="20dp"
                android:text="转让市场"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_4" />

            <View
                style="@style/line"
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_up_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_dayup_tab"
                android:gravity="center"
                android:padding="20dp"
                android:text="日增息"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_4" />

            <View
                style="@style/line"
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/left_ic_guarantee"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/left_security_guarantee"
                android:textColor="@color/logout_guide"
                android:textSize="@dimen/font_common_4"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
