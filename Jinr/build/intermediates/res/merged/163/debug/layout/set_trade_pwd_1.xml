<?xml version="1.0" encoding="utf-8"?>
<!-- 确认新交易密码 第一次 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/trap_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="设置新交易密码，建议勿与银行密码相同"
        android:textColor="@color/my_bank_card"
        android:textSize="16sp" />

    <com.jinr.core.utils.PasswordInputView2
        android:id="@+id/txt_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/btn_next"
        style="@style/btn5_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_blue_light_bg"
        android:text="下一步"
        android:textColor="@color/white" 
        android:visibility="gone"/>

</LinearLayout>