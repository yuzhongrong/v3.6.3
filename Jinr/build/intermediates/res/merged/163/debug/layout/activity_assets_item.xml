<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assets_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/assets_color_tv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/current_assets_lay"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginLeft="14dp"
        android:background="@color/white_bg" >

        <TextView
            android:id="@+id/current_assets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/current_assets"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/regular_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="20dp" >

            <TextView
                android:id="@+id/current_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/dark"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/goto_next" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

</LinearLayout>