<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mButtonScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <ImageView
                android:id="@+id/image_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/indemnify" />

            <TextView
                android:id="@+id/tv_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_safe"
                android:text="@string/security"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:paddingBottom="15dp" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/image_vouch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vouch" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_vouchname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/relativeLayout1"
                android:text="实力担保"
                android:textColor="@color/blueness"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_vouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_vouchname"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_vouchname"
                android:text="由世界500强金融机构旗下担保公司提供全额本息担保，有保障更安全！"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:paddingBottom="15dp" >

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/image_claims"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/claims" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_claimsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/relativeLayout2"
                android:text="绝密隐私保护"
                android:textColor="@color/blueness"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_claims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_claimsname"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_claimsname"
                android:text="鲸鱼支持SSL安全加密，128位加密技术，能有效避免被篡改以及删除。"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:paddingBottom="15dp" >

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/card" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_turnovername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/relativeLayout3"
                android:text="同卡进出"
                android:textColor="@color/blueness"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_turnover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_turnovername"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_turnovername"
                android:text="坚持同卡进出原则，打造资金流通闭环。让资金在安全的状态下获取超高收益。"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:paddingBottom="20dp" >

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/image_compared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/compared" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_comparedname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/relativeLayout4"
                android:layout_alignTop="@+id/relativeLayout4"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/relativeLayout4"
                android:gravity="center_vertical"
                android:text="收益对比"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_compared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relativeLayout4"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginTop="5dp"
                android:text="投资10000.00元365天对比(元)"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_compared"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="35dp" >

                <ImageView
                    android:id="@+id/image_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chart" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>