<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >

    <!-- title布局 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <View
        style="@style/line"
        android:layout_marginBottom="20dp" />

    <View style="@style/line" />

    <RelativeLayout
        android:id="@+id/manage_bank_rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_menu_height"
        android:background="@drawable/back_select" >

        <TextView
            android:id="@+id/manage_bank_tv1"
            style="@style/sec"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_left_offset"
            android:text=""
            android:textColor="@color/main_out_down_text_color" />

        <TextView
            android:id="@+id/manage_bank_tv2"
            style="@style/sec"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_left_offset"
            android:text=""
            android:textColor="@color/main_out_down_text_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manage_bank_rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_menu_height"
        android:background="@color/base_menu_bg"
        android:orientation="horizontal" >

        <TextView
            style="@style/sec"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/add_bank_card"
            android:textColor="@color/main_out_down_text_color" />

        <ImageView
            style="@style/wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/button_arrow" />
    </RelativeLayout>

    <View style="@style/line" />

</LinearLayout>