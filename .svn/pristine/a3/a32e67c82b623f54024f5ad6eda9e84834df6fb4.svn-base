<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp" >

    <View
        android:id="@+id/redbag_select"
        android:layout_width="6dp"
        android:layout_height="50dp"
        android:background="@drawable/menu_left_selector" />

    <TextView
        android:id="@+id/toolbox_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/ic_main_assets"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="资产"
        android:textColor="@drawable/left_menu_text_color_selector"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/img_slid_asset"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_above="@+id/toolbox_title"
        android:layout_toRightOf="@+id/toolbox_title"
        android:background="@drawable/shape_point"
        android:scaleType="fitXY"
        android:visibility="invisible" />

</RelativeLayout>