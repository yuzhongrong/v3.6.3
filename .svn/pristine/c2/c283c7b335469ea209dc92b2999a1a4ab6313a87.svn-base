<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="true"
              android:background="#F2F2F2"
              android:orientation="vertical">

    <include
        android:id="@+id/include1"
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View style="@style/line"/>

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="收货人"
                android:textColor="@color/gray_text_dark"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:textColor="@color/gray_text_dark_tv"
                android:textSize="14sp"
                android:textCursorDrawable="@drawable/cursor_drawable_bg">

                <requestFocus/>
            </EditText>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="联系电话"
                android:textColor="@color/gray_text_dark"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:background="@null"
                android:ems="10"
                android:inputType="phone"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:textColor="@color/gray_text_dark_tv"
                android:textCursorDrawable="@drawable/cursor_drawable_bg"
                android:textSize="14sp"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            android:id="@+id/rl_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="所在地区"
                android:textColor="@color/gray_text_dark"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:textColor="@color/gray_text_dark_tv"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/button_arrow"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="详细地址"
                android:textColor="@color/gray_text_dark"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_drawable_bg"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="街道，楼牌号等"
                android:textColor="@color/gray_text_dark_tv"
                android:textColorHint="@color/gray_1"
                android:textSize="14sp"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            android:id="@+id/rl_default"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="设为默认"/>

            <ImageView
                android:id="@+id/image_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/choice"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>