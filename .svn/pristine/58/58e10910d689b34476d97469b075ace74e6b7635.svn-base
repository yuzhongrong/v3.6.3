<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/adjust_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_assets_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/my_all_assets"
            android:textColor="@color/white"
            android:textSize="@dimen/myassets_tx_size" />

        <TextView
            android:id="@+id/total_assets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="@string/zero_zero"
            android:textColor="@color/white"
            android:textSize="43dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/yesterday_earn_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/yesterday_earn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/myassets_tx_size" />

                <TextView
                    android:id="@+id/yesterday_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero_zero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/myassets_tx_size2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_earn_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="56dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/all_earn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/myassets_tx_size" />

                <TextView
                    android:id="@+id/all_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero_zero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/myassets_tx_size2" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>